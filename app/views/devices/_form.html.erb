<%= form_for(@device, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @device.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h4>

      <ul>
      <% @device.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :marca, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :marca, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :impresora, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :impresora, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :scanner, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :scanner, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :red, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :red, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :direccion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :direccion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ultimoMantenimiento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :ultimoMantenimiento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :frecuencia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :frecuencia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ubicacion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ubicacion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
