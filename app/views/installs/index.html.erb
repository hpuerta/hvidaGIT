<div class="page-header">
  <%= link_to new_install_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Install
  <% end %>
  <h1>Listing installs</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @installs) do |install| %>
            <td><%= link_to 'Show', install %></td>
        <td><%= link_to 'Edit', edit_install_path(install) %></td>
        <td><%= link_to 'Destroy', install, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
